<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
        <link rel="stylesheet" href="/public/css/logradouro.css">
</head>

<body>
    <%- include('../partials/nav'); %>
        <section name="content">

            <div name="content">

                <div class="container mt-5">

                    <span class="alert alert-danger mt-5 mb-2" id="message" role="alert"></span>

                    <h3 class="text-center mt-5">Pesquisar Logradouro</h3>

                    <div class="row mt-3">

                        <div class="col-md-2">
                            <input type="text" id="uf" class="form-control" placeholder="UF">
                        </div>
                        <div class="col-md-4">
                            <input type="text" id="cidade" class="form-control" placeholder="Cidade">
                        </div>
                        <div class="col-md-5">
                            <input type="text" id="logradouro" class="form-control" placeholder="Logradouro">
                        </div>

                        <div class="col-md-1 input-group-append">
                            <button class="btn btn-warning" id="pesquisar">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white"
                                    class="bi bi-search" viewBox="0 0 16 16">
                                    <path
                                        d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center ">
                        <div class="spinner-border text-dark mt-3 mb-3" role="status" id="spinner">
                            <span class="visually-hidden"></span>
                        </div>
                    </div>

                    <table class="table table-striped table-hover mt-5">
                        <thead>
                            <tr>
                                <th>CEP</th>
                                <th>Logradouro</th>
                                <th>Bairro</th>
                                <th>Localidade</th>
                                <th>UF</th>
                                <th id="oculto">ibge</th>
                                <th id="oculto">DDD</th>
                            </tr>
                        </thead>
                        <tbody id="dados"></tbody>
                    </table>

                </div>
            </div>

        </section>
        <%- include('../partials/script'); %>
            <script src="/public/js/buscalogradouro.js"></script>
</body>

</html>
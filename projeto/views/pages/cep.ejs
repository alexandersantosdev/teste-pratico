<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
        <link rel="stylesheet" href="/public/css/cep.css">
</head>

<body>
    <%- include('../partials/nav'); %>
        <section name="content">

            <div class="container mt-5">

                <span class="alert alert-danger mt-5 mb-2" id="message" role="alert" style="display: none;"></span>
                <div class="col-md-8">

                    <div class="row d-flex justify-content-center">

                        <div class="input-group col-8 mt-5 mb-2">
                            <input type="text" class="form-control " id="cep_pesquisa" placeholder="ex: 83.330-100"
                                onent>
                            <div class="input-group-append">

                                <button type="button" id="pesquisar" class="btn btn-warning">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white"
                                        class="bi bi-search" viewBox="0 0 16 16">
                                        <path
                                            d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>


                    <div class="d-flex justify-content-center ">
                        <div class="spinner-border text-dark mt-3 mb-3" role="status" id="spinner"
                            style="display: none;">
                            <span class="visually-hidden"></span>
                        </div>
                    </div>
                </div>


                <div class="d-flex justify-content-center  mt-3 mb-3">
                    <div id="dados">
                        <h3>Realize uma pesquisa pelo CEP</h3>
                    </div>
                </div>

                <div class="mt-3 mb-3" id="map"></div>

            </div>
        </section>
        <%- include('../partials/script'); %>
            <script src="/public/js/buscacep.js"></script>
</body>

</html>